<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">

            <div class="form-group">
                <input type="text" name="id" value="<%= data.id%>" placeholder="Id" class="form-control" autofocus>
            </div>
            <div class="form-group">
                <input type="text" name="firstname" value="<%= data.firstname%>" placeholder="First Name" class="form-control" autofocus>
            </div>
            <div class="form-group">
                <input type="text" name="lastname" value="<%= data.lastname%>" placeholder="Last Name" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="mail" value="<%= data.mail%>" placeholder="Mail" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" name="phone" value="<%= data.phone%>" placeholder="Phone" class="form-control">
            </div>

          <button type="submit" class="btn btn-primary">
            save customer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>